{
  "name": "Megave",
  "description": "Save on MEGA",
  "version": "0.2",
  "manifest_version": 2,

  "background": {
    "scripts": ["bbackground.js"]
  },

  "browser_action": {
    "default_title": "Save on MEGA",
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "file://*"
  ]
}