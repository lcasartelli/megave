{
  "name": "Megave",
  "description": "Save on MEGA",
  "version": "0.3",
  "manifest_version": 2,

  "background": {
    "scripts": ["bbackground.js"]
  },

  "browser_action": {
    "default_title": "Save on MEGA",
    "default_icon": "icon-19.png"
  },
  "permissions": [
    "tabs", 
    "http://*/*", 
    "https://*/*", 
    "file://*", 
    "contextMenus"
  ],
  "icons": {
    "16": "icon-16.png",
    "19": "icon-19.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}